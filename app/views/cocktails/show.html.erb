<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete #{dose.ingredient.name}?" } do  %>
    <p>Delete dose</p>
  <% end %>
<% end %>


<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
